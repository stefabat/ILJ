isbn = {1476-4687 (Electronic)\r0028-0836 (Linking)},
issn = {0028-0836},
journal = {Nature},
number = {7314},
pages = {440--443},
pmid = {20864998},
title = {{Conical intersection dynamics of the primary photoisomerization event in vision.}},
volume = {467},
year = {2010}
}
